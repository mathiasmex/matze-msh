<% form_for :user, :url => {:action => 'change_password'} do |form| %>
<fieldset>
  <legend>Passwort &auml;ndern</legend>
  <br />
    <p>           
      <label for="old_password" class="block">Altes Passwort</label><br />
      <%= password_field_tag 'old_password', @old_password, :size => 45, :class => 'text' %>
    </p>
    <p>
      <label for="password" class="block">Neues Passwort</label><br />
      <%= password_field_tag 'password', {}, :size => 45, :class => 'text' %><br />
      <small>Zwischen 4 und 40 Zeichen</small>
    </p>
    <p>
      <label for="password_confirmation"  class="block">Neues Passwort best&auml;tigen</label><br />
      <%= password_field_tag 'password_confirmation', {}, :size => 45, :class => 'text' %>
    </p>
    <%= submit_tag 'Passwort &auml;ndern' %>
  </fieldset>
<%end%>