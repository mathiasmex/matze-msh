<% form_for :user, :url => {:action => "reset_password"} do |form| %>
  <fieldset>
  <legend>Passwort zur&uuml;cksetzen</legend>
  <br />
  <p>
    <label for="user_password" >Passwort</label><br/>
    <%= form.password_field :password, :size => 45, :class => 'text' %>
  </p>
  <p>
  <label for="user_password_confirmation" >Passwort best&auml;tigen</label><br/>
    <%= form.password_field :password_confirmation, :size => 45, :class => 'text' %>
  </p>
    <%= submit_tag "Passwort zur&uuml;cksetzen" %>
  </fieldset>
<% end %>
