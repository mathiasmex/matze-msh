<% if user_logged_in? %>
  <h3>Angemeldet als:</h3>
  <ul>
    <li><a><%= current_user.login %></a></li>
  </ul>
<% else %>
  <h3>Willkommen Gast</h3>
<% end %>

<ul>
  <% if user_logged_in? %>
    <li><%= link_to 'Ihre Daten', current_user %></li>
    <li><%= link_to 'Passwort &auml;ndern', change_password_url  %></li>
    <li><%= link_to 'Logout', logout_url  %></li>
  <% else %>
    <li><%= link_to "Signup", signup_url  %></li>
    <li><%= link_to 'Login', login_url  %></li>
  <% end %> 
</ul>
